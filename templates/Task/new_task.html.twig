{% extends 'base.html.twig' %}

{% block title %}Nueva Tarea{% endblock %}

{% block body %}
    <div class="mobile-container">
        <h1>Nueva Tarea</h1>
        <p class="form-instructions">Ingresa el título de la tarea que deseas empezar:</p>

        {{ form_start(form, {'attr': {'class': 'mobile-form'}}) }}
        <div class="form-group">
            {{ form_row(form.title, {'attr': {'class': 'input-mobile'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.save, {'attr': {'class': 'button-mobile'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .mobile-container {
            max-width: 600px;
            margin: 0 auto;
            margin-top: 50px;
            padding: 16px;
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        /* Títulos */
        h1 {
            font-size: 70px;
            text-align: center;
            color: #333;
        }

        /* Instrucciones */
        .form-instructions {
            text-align: center;
            font-size: 30px;
            color: #666;
            margin-bottom: 16px;
        }

        /* Formulario */
        .mobile-form {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

        /* Campos de entrada */
        .input-mobile {
            width: 100%;
            padding: 12px;
            font-size: 30px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        /* Botón */
        .button-mobile {
            width: 100%;
            padding: 12px;
            font-size: 30px;
            color: #fff;
            background-color: #007BFF;
            border: none;
            border-radius: 4px;
            text-align: center;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .button-mobile:hover {
            background-color: #0056b3;
        }

        /* Pequeños ajustes para pantallas aún más pequeñas */
        @media (max-width: 320px) {
            h1 {
                font-size: 1.2rem;
            }

            .input-mobile, .button-mobile {
                font-size: 0.9rem;
                padding: 10px;
            }
        }

    </style>
{% endblock %}
